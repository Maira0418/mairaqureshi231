# ğŸŒ¦ï¸ Weather App (API-based)

"""
This Python script fetches real-time weather information using the OpenWeatherMap API.
You need to sign up at https://openweathermap.org/ to get a free API key.
"""

import requests

def get_weather(city, api_key):
    base_url = "https://api.openweathermap.org/data/2.5/weather"
    params = {
        'q': city,
        'appid': api_key,
        'units': 'metric'
    }
    response = requests.get(base_url, params=params)
    if response.status_code == 200:
        data = response.json()
        print(f"\nğŸŒ Weather in {city.title()}:")
        print(f"Temperature: {data['main']['temp']}Â°C")
        print(f"Weather: {data['weather'][0]['description'].title()}")
        print(f"Humidity: {data['main']['humidity']}%")
        print(f"Wind Speed: {data['wind']['speed']} m/s")
    else:
        print("âŒ City not found or API error.")

def main():
    print("\n--- Weather App ---")
    city = input("Enter city name: ").strip()
    api_key = input("Enter your OpenWeatherMap API key: ").strip()
    if city and api_key:
        get_weather(city, api_key)
    else:
        print("âŒ Please provide both city and API key.")

if __name__ == '__main__':
    main()
